<settings>
	<servers>
		<server>
			<id>lehel.site</id>
			<username>bob_html</username>
			<password>bob_html</password>
		</server>
	</servers>

	<mirrors>
		<mirror>
			<id>central-czm-LAN</id>
			<name>Central Mirror</name>
			<url>http://artifactory-medmuc:8084/artifactory/lehel-public-repository
			</url>
			<mirrorOf>central</mirrorOf>
		</mirror>
	</mirrors>


	<activeProfiles>
		<!-- Profile have to be in the active list, otherwise the repository is 
			ignored. See bug https://issues.apache.org/jira/browse/MNG-5984 -->
		<!-- -P does not work also -->
		<activeProfile>maven-repository-setup</activeProfile>

	</activeProfiles>


	<profiles>

		<profile>
			<id>is-ci-build</id>
			<activation>
				<property>
					<name>teamcity.version</name>
				</property>
			</activation>
			<properties>
				<ci-build>true</ci-build>
			</properties>
		</profile>
		<profile>
			<id>missing-build-vcs-number</id>
			<activation>
				<property>
					<name>!build.vcs.number</name>
				</property>
			</activation>
			<!-- es wird sich wahrscheinlich um einen lokalen build ausserhalb von 
				teamcity handeln. build.vcs.number enthaelt unter teamcity die vcs revision 
				der Projekt Sourcen unter build. -->
			<properties>
				<build.vcs.number />
			</properties>
		</profile>
		<profile>
			<id>maven-repository-setup</id>
			<activation>
				<file>
					<missing>file_existiert_sowieso_nicht</missing>
				</file>
			</activation>
			<repositories>

				<repository>
					<id>forum-snapshot</id>
					<url>http://artifactory-medmuc:8084/artifactory/lehel-public-repository
					</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>

			</repositories>

		</profile>


		<profile>
			<id>teamcity-utilization</id>
			<activation>
				<property>
					<name>build.vcs.number</name>
				</property>
			</activation>
			<properties>
				<versionized>byTeamCity</versionized>
			</properties>
		</profile>

		<profile>
			<id>overwrite-buildForRelease</id>
			<activation>
				<property>
					<name>buildForRelease</name>
				</property>
			</activation>
			<properties>
				<buildForRelease>${buildForRelease}</buildForRelease>
			</properties>

		</profile>



	</profiles>

</settings>
